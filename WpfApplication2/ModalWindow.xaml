                              UnloadedBehavior="Stop"
                              Width="50"
                              Height="50"
                              Stretch="Fill"
                              MediaEnded="MediaElement_MediaEnded"/>
            </Button>
            <TextBlock Text="Son of Anarchy" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>
        
        <StackPanel Grid.Row="3" Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Width="50" Height="50" Click="CarrotGarden_Click">
