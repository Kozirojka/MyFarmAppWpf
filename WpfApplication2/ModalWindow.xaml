        <StackPanel Grid.Row="5" Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Width="50" Height="50" Click="Tractor_Click">
                <MediaElement x:Name="SixMediaElement"
