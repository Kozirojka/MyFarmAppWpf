            </Button>
            <TextBlock Text="Archer" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Third Button -->
        <StackPanel Grid.Row="2" Margin="10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Width="50" Height="50" Click="SonOfAnarchyButton_Click">
